@page
@model MyRazorPage.Pages.IndexModel
@{
}
<div id="content">
    <div id="content-left">
        <h3>CATEGORY</h3>
        <ul>
            @{
                if (Model.Category != null)
                {
                    foreach (var item in Model.Category)
                    {
                            <a href="~/product/category?catID=@item.CategoryId">
                            <li>@item.CategoryName</li></a>
                    }
                }
            }
        </ul>
    </div>
    <div id="content-right">
        <div class="path">Hot</b></div>
        <div class="content-main">
            @if (Model.HotProducts != null)
            {
                foreach (var item in Model.HotProducts)
                {
                    <div class="product">
                        <a href="~/product/detail?id=@item.ProductId"><img src="~/img/1.jpg" width="100%" /></a>
                        <div type="text-decoration: none; font-weight: bold;" class="name"><a href="~/product/detail?id=@item.ProductId">@item.ProductName</a></div>
                        <div class="price">$ @item.UnitPrice</div>

                        <div style="padding:10px; padding-left:35%"><a asp-page-handler="BuyNow" asp-route-ProID="@item.ProductId" style="text-decoration: none; padding: 6px; border-radius: 10px; background-color: sienna; color: white">Buy now</a></div>
                    </div>
                }
            }
        </div>
        <div class="path">Best Sale</b></div>
        <div class="content-main">
            @if(Model.BestSeller != null){
                foreach (var item in Model.BestSeller)
                {
                    <div class="product">
                        <a href="~/product/detail?id=@item.ProductId"><img src="~/img/1.jpg" width="100%" /></a>
                        <div type="text-decoration: none; font-weight: bold;" class="name"><a href="~/product/detail?id=@item.ProductId">@item.ProductName</a></div>
                        <div class="price">$ @item.UnitPrice</div>
                        <div style="padding:10px; padding-left:35%"><a asp-page-handler="BuyNow" asp-route-ProID="@item.ProductId" style="text-decoration: none; padding: 6px; border-radius: 10px; background-color: sienna; color: white">Buy now</a></div>
                    </div>
                }
            }
        </div>
        <div class="path">New Product</b></div>
        <div class="content-main">
            @{
                if(Model.NewProducts !=null){
                    foreach (var item in Model.NewProducts)
                    {
                        <div class="product">
                                <a  href="~/product/detail?id=@item.ProductId"><img src="~/img/1.jpg" width="100%" /></a>
                            <div class="name"><a type="text-decoration: none; font-weight: bold;" href="~/product/detail?id=@item.ProductId">@item.ProductName</a></div>
                            <div class="price" >$ @item.UnitPrice</div>
                            <div style="padding:10px; padding-left:35%"><a asp-page-handler="BuyNow" asp-route-ProID="@item.ProductId" style="text-decoration: none; padding: 6px; border-radius: 10px; background-color: sienna; color: white">Buy now</a></div>
                        </div>                        
                    }
                }
            }
        </div>
    </div>
</div>



