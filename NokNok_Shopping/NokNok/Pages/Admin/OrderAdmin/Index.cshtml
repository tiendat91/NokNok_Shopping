@page
@model NokNok.Pages.Admin.OrderAdmin.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderId)
            </th>
            <th>
                Customer Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShippedDate)
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.OrderId">@Html.DisplayFor(modelItem => item.OrderId)</a>
                </td>
                <td>
                    <span style="font-weight:bold">@item.Customer.CompanyName</span>
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                    @if (item.ShippedDate != null)
                    {
                        @item.ShippedDate
                    }
                    else
                    {
                        <p>Not yet</p>
                    }
            </td>
            <td>
                    @if(item.ShippedDate != null)
                    {
                        <span style="color:green; font-weight:bold">Success</span>
                    }
                    else
                    {
                        <span style="color:red; font-weight:bold">Pending</span>
                    }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
